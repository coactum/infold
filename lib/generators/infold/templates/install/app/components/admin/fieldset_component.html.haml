- if @kind != :switch && !hide_label?
  = render Admin::LabelComponent.new(@form, @field, required: @required)
- if input_group?
  = render Admin::InputGroupComponent.new(append: @append, prepend: @prepend) do
    = render form_field
- elsif form_field
  = render form_field
= content
= render Admin::InvalidMessageComponent.new(@form, @field)